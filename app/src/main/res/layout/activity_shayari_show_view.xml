<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shayari_show_view"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:id="@+id/line1"
        android:background="@color/purple_500"
        android:gravity="center">
        <Button
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_70sdp"
            android:id="@+id/activity_shayari_show_view_Graddlebutton"
            android:background="@drawable/img_20"
            android:scaleX="0.4"
            android:scaleY="0.4"
            app:backgroundTint="@null"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/activity_shayari_show_view_textview_count"
            android:text="1"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            app:backgroundTint="@null"
            android:layout_weight="1"/>
        <Button
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_70sdp"
            android:id="@+id/activity_shayari_show_view_RefreshColourbutton"
            android:background="@drawable/img_21"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:layout_weight="1"/>
    </LinearLayout>
<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_weight="2"-->
<!--        android:orientation="horizontal"-->
<!--        android:layout_margin="@dimen/_5sdp">-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_shayari_show_view_textview_shayari"
            android:text="hello"
            android:background="#F3EDC753"
            android:textSize="@dimen/_20sdp"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_below="@id/line1"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"/>
<!--    </LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="@color/purple_500"
        android:gravity="center"
        android:layout_below="@id/line1"
        android:padding="@dimen/_2sdp"
        >
        <Button
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/activity_shayari_show_view_copybutton"
            android:background="@drawable/img_23"
            app:backgroundTint="@null"
            android:scaleX="0.7"
            android:scaleY="0.8"
            android:layout_weight="1"/>
        <Button
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/activity_shayari_show_view_downbutton"
            android:background="@drawable/baseline_arrow_back_ios_24"
            app:backgroundTint="@null"
            android:scaleX="0.7"
            android:scaleY="0.8"
            android:layout_weight="1"
            android:layout_margin="@dimen/_2sdp"
            />
        <Button
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/activity_shayari_show_view_editbutton"
            android:background="@drawable/img_22"
            app:backgroundTint="@null"
            android:scaleX="0.7"
            android:scaleY="0.8"
            android:layout_weight="1"/>
        <Button
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/activity_shayari_show_view_upbutton"
            android:background="@drawable/baseline_arrow_forward_ios_24"
            app:backgroundTint="@null"
            android:scaleX="0.7"
            android:scaleY="0.8"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/activity_shayari_show_view_sharebutton"
            android:background="@drawable/img_24"
            app:backgroundTint="@null"
            android:scaleX="0.7"
            android:scaleY="0.8"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>