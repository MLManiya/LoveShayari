<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shayari_Details_Edit_Activity"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_shayari_details_edit_textview_shayari"
        android:text="hello"
        android:background="#F3EDC753"
        android:textSize="@dimen/_20sdp"
        android:textStyle="italic"
        android:gravity="center"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2.8"
        android:background="#978181"
        android:layout_margin="@dimen/_5sdp">
        <LinearLayout
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:background="@color/white">
            <Button
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/activity_shayari_details_edit_RefreshColourbutton"
                android:background="@drawable/img_21"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/activity_shayari_details_edit_Graddlebutton"
                android:background="@drawable/img_20"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_5sdp">
            <Button
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/activity_shayari_details_edit_background_button"
                android:text="Background"
                android:background="#F30606"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_weight="1"/>
            <Button
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/activity_shayari_details_edit_text_color_button"
                android:text="Text Color"
                android:background="#F30606"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_weight="1"/>
            <Button
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/activity_shayari_details_edit_share_button"
                android:text="Share"
                android:background="#F30606"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_5sdp"
            >
            <Button
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/activity_shayari_details_edit_font_button"
                android:text="Font"
                android:background="#F30606"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_weight="1"/>
            <Button
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/activity_shayari_details_edit_emoji_button"
                android:text="Emoji"
                android:background="#F30606"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_weight="1"/>
            <Button
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/activity_shayari_details_edit_text_size_button"
                android:text="Text Size"
                android:background="#F30606"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>